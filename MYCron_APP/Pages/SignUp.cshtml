@page
@model MYCron_APP.Pages.SignUpModel
@{
    Layout = "_ModalLayout";
    ViewData["Title"] = "SignUp";
}
<div id="modalDiv">
    <div class="container-fluid">
        <div class="row">
            <div class="col-7 d-flex align-items-end justify-content-center">
                @if(Model.signedUpFor == 0)
                {
                    <img class="w-100" src="~/images/LetsTalkAboutNext.png" alt=" " />
                }
                else if(Model.signedUpFor == 1)
                {
                    <img class="w-75" src="~/images/LetsTalkAboutNext.png" alt=" " />
                }
                else
                {
                    <img class="w-100" src="~/images/LearningShowdown.png" alt=" " />
                }
            </div>
            <div class="col-5 p-5">
                <form asp-page-handler="OnPostAsync" id="modalForm" class="text-dark m-auto mt-1" enctype="multipart/form-data">
                    <input asp-for="signedUpFor" type="hidden" />
                    <!-- Name input-->
                    <div class="form-floating shadow mb-3">
                        <input asp-for="FormModel.UserName" class="form-control" type="text" placeholder="Enter your name">
                        <label for="name">User name</label>
                    </div>
                    <!-- Email address input-->
                    <div class="form-floating shadow mb-3">
                        <input asp-for="FormModel.EMail" class="form-control" type="email" placeholder="Enter your email address">
                        <label for="email">Email</label>
                    </div>
                    <!-- Phone number input-->
                    <div class="form-floating shadow mb-3">
                        <input asp-for="FormModel.Phone" class="form-control" type="tel" placeholder="Enter your phone number">
                        <label for="phone">Phone number</label>
                    </div>
                    <!-- Password input-->
                    <div class="form-floating shadow mb-3">
                        <input asp-for="FormModel.Password" class="form-control" type="password" placeholder="Enter your password" />
                        <label for="password">Password</label>
                    </div>
                    <!-- Confirm Password input-->
                    <div class="form-floating shadow mb-3">
                        <input id="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                        <label for="password">Confirm Password</label>
                    </div>
                    <div>
                        <button class="btn btn-primary btn-sm btn-with-span-bg float-end mt-4" id="confirmButton" type="submit">SignUp &nbsp;<span><i class="fa-solid fa-arrow-right"></i></span></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>